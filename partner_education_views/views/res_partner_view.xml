<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_education" model="ir.ui.view">
        <field name="name">res.partner.eduacation.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='internal_notes']" position="after">
                <page name="education" string="Education">
                    <group>
                        <group>
                            <field name="sun_ids" widget="many2many_tags"
                                   options="{'no_create_edit': True}"/>
                            <field name="education_level"/>
                            <field name="foreign_education"/>
                            <field name="foreign_education_approved"/>
                            <field name="cv_file_name" invisible="1"/>
                            <field name="cv" filename="cv_file_name"/>
                            <field name="references_file_name" invisible="1"/>
                            <field name="references" filename="cv_file_name"/>
                        </group>
                        <group>
                            <field name="drivers_license_ids"
                                   widget="many2many_tags"
                                   options="{'no_create_edit': True}"/>
                            <field name="has_car"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
